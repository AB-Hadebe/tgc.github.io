rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Resume uploads - users can upload, admin can read
    match /resumes/{userId}/{filename} {
      // Allow users to upload their own resumes
      allow create: if request.auth != null && 
                     request.auth.uid == userId && 
                     request.resource.size < 10 * 1024 * 1024 && 
                     request.resource.contentType.matches('application/pdf|application/msword|application/vnd.openxmlformats-officedocument.wordprocessingml.document');
      
      // Users can view their own resumes
      allow read: if request.auth != null && 
                   (request.auth.uid == userId || request.auth.token.admin == true);
      
      // Only admin can delete
      allow delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Public files like images
    match /public/{filename} {
      allow read;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
